<div class="w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 mb-2">
  <div class="px-5 pb-5">
    <div id="<%= dom_id order %>">
      <p class="my-5">
        <strong class="block font-medium mb-1">Customer email:</strong>
        <%= order.customer_email %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">fulfilled:</strong>
        <%= order.fulfilled %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Total:</strong>
        <%= order.total %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Address:</strong>
        <%= order.address %>
      </p>

      <% if order.order_products.any? %>
        <strong class="block font-medium mb-1">Products:</strong>
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
          <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
              <th scope="col" class="px-6 py-3">
                  Product name
              </th>
              <th scope="col" class="px-6 py-3">
                  Size
              </th>
              <th scope="col" class="px-6 py-3">
                  Quantity
              </th>
            </tr>
          </thead>
          <tbody>
            <% order.order_products.each do |op| %>
              <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <td class="px-6 py-4">
                  <%= op.product.name %>
                </td>
                <td class="px-6 py-4">
                  <%= op.size %>
                </td>
                <td class="px-6 py-4">
                  <%= op.quantity %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>

      <% if action_name != "show" %>
        <%= link_to "Show this order", [:admin, order], class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        <%= link_to "Edit this order", edit_admin_order_path(order), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
        <hr class="mt-6">
      <% end %>
    </div>
  </div>
</div>
